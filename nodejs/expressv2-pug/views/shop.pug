extends layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/product.css")

block content
  main
      if prods.length > 0
        .grid
          each product in prods
            article.card.product-item
              header.card__header
                h1.product__title #{product.title}
              .card__image
                img(src="http://culture.affinitymagazine.us/wp-content/uploads/2017/05/635873821517718970351055939_Stack-of-books-great-education-608x406.jpg", alt="#{product.title}")
              .card__content
                h2.product__price $19.99
                p.product__description A ver interesting book!
              .card__actions
                button.btn Add to Cart
      else
        h1 No Products